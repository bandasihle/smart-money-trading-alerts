# Environment Variables Template
# IMPORTANT: Copy this to .env and fill in your actual values
# NEVER commit .env file to version control

# ============================================
# PUSHOVER CONFIGURATION (Mobile Alerts)
# ============================================
# Get these from https://pushover.net/
PUSHOVER_APP_TOKEN=your_pushover_app_token_here
PUSHOVER_USER_KEY=your_pushover_user_key_here

# ============================================
# OPTIONAL: DATA SOURCE API KEYS
# ============================================
# Only needed if switching from yfinance
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
# TWELVE_DATA_API_KEY=your_twelve_data_key_here

# ============================================
# VERCEL DEPLOYMENT (CI/CD)
# ============================================
# Add this to GitHub Secrets, NOT to .env
# VERCEL_TOKEN=your_vercel_token_here

# ============================================
# FLASK CONFIGURATION
# ============================================
FLASK_ENV=development
# FLASK_SECRET_KEY=your_secret_key_here_for_production

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
DEBUG=True
LOG_LEVEL=INFO
